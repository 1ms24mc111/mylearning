pipeline {
    agent any

    stages {
        stage('Test in Docker') {
            steps {
                sh '''
                  docker run --rm \
                    -v "$PWD:/app" \
                    -w /app \
                    node:18 \
                    sh -c "npm install && npm test"
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Tests passed'
        }
        failure {
            echo '❌ Tests failed'
        }
    }
}

