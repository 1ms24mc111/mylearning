pipeline {
    agent any

    environment {
        IMAGE_NAME = "vivek5041/mylearing"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/1ms24mc111/mylearning.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                        dockerImage.push('latest')
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline successful"
        }
        failure {
            echo "❌ Pipeline failed"
        }
        always {
            deleteDir()
        }
    }
}

